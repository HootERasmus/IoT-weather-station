extends layout

block content
    .row
        form.form-inline(action='/workout/add', method='POST')
            input.mb-2.mr-sm-2.mb-sm-0.form-control(type='text', name='name', value='')
            button.btn.btn-success(type='submit') Add workout
    each workout in workouts
        .row.justify-content-md-start
            .card.text-white.bg-primary
                .card-header Workout
                .card-body            
                    h5.card-title #{workout.name}
                    .row
                        .col-6
                            a.btn.btn-info.mb-2.mr-sm-2.mb-sm-0(href=`/workout/edit?id=${workout._id}`) Edit
                        .col-6
                            form(action='/workout/remove', method='POST')
                                input(type='hidden', name='id', value=workout._id)
                                button.mb-2.mr-sm-2.mb-sm-0.btn.btn-danger(type="submit") Remove          
